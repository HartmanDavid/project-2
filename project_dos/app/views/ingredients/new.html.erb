<h1>Ingredients#new</h1>
<p>Find me in app/views/ingredients/new.html.erb</p>
<%= form_for (@ingredient) do |i| %>
    Ingredient Name <%= i.text_field :name %>
    <%= i.submit "Add Ingredient" %>
    <% if @ingredient.save %>
        <%= flash.now.alert = 'Ingredient Added' %>
    <% else %>
        <%= flash.now.alert = 'Error. Not saved' %>
    <% end %>
<% end %>

<%= link_to 'Back to ingredients list', ingredients_path %>
